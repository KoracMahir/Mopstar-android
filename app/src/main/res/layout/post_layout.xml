<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/profile_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profilename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:lineSpacingExtra="2sp"
                        android:textColor="#1d1e37"
                        android:textSize="14sp"
                        tools:text="Muriz SuljeviÄ‡" />

                    <TextView
                        android:id="@+id/timeago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#a7a7a7"
                        android:textSize="12sp"
                        tools:text="1 day ago" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/postcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:lineSpacingExtra="10sp"
                android:textColor="#3e3f51"
                android:textSize="14sp"
                tools:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#a7a7a7"
                android:lineSpacingExtra="10sp"
                android:hint="Add Comment... "
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:inputType="text"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/like"
                android:layout_width="17.4dp"
                android:layout_height="15.4dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/like_icon"
                />
            <TextView
                android:id="@+id/likesNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#3e3f51"
                android:lineSpacingExtra="10sp"
                android:layout_gravity="center_vertical"
                tools:text="128"
                android:layout_marginRight="24dp"
                />
        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>