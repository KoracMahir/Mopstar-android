<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:src="@drawable/group_default"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/charcoal_grey"
            android:lineSpacingExtra="2sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Sarajevo Car Meet"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_group_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/greyish"
                android:lineSpacingExtra="4sp"
                android:text="14 members"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/greyish"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/greyish"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="4sp"
        android:text="Details"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="10sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/azure"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="8sp"
        android:layout_marginBottom="24dp"
        android:text="See More"
        />

</LinearLayout>